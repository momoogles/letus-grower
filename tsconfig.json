{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2019", "dom", "dom.iterable"],
    "outDir": "./dist",
    "rootDir": "src/blocks",
    "baseUrl": "src/blocks",
    "strict": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true
      }
    ]
  },
  "include": ["src/blocks/**/*.ts"],
  "exclude": ["node_modules", "src/blocks/**/*.stories.ts"]
}
